<?xml version="1.0"?>
<robot name="my_robot"  xmlns:xacro="http://ros.org/wiki/xacro"> 
  
 <xacro:property name="base_length" value="0.6"/>
 <xacro:property name="base_width" value="0.4"/>
 <xacro:property name="base_height" value="0.2"/>
 <xacro:property name="wheel_radius" value="0.1"/>
 <xacro:property name="wheel_length" value="0.05"/>
 

<!--base_footprint-->
 <link name="base_footprint"/>

<!-- Define the wheel macro first -->
<xacro:macro name="wheel" params="prefix">
  <link name="${prefix}_wheel">
    <visual>
        <geometry>
            <cylinder radius="${wheel_radius}" length="${wheel_length}"/>
        </geometry>
        <origin xyz="0 0 0" rpy="${pi/2} 0 0"/>
        <material name="red"/>
    </visual>
    <collision>
        <geometry>
            <cylinder radius="${wheel_radius}" length="${wheel_length}"/>
        </geometry>
        <origin xyz="0 0 0" rpy="${pi/2} 0 0"/>
    </collision>
    <xacro:cylinder_inertial m="1.0" r="${2*wheel_radius}" h="${2*wheel_length}" 
                        xyz="0 0 ${wheel_length/2}" rpy="0 0 0"/>
  </link>
</xacro:macro>

 <!-- Now use the wheel macro -->
 <xacro:wheel prefix="right"/>
 <xacro:wheel prefix="left"/>

 <!--base_link-->
  <link name="base_link">
    <visual>
        <geometry>
            <box size="${base_length} ${base_width} ${base_height}"/>
        </geometry>
        <origin xyz="0 0 ${base_height/2}" rpy="0 0 0"/>
        <material name="green"/>
    </visual>
    <collision>
        <geometry>
            <box size="${base_length} ${base_width} ${base_height}"/>
        </geometry>
        <origin xyz="0 0 ${base_height/2}" rpy="0 0 0"/>
    </collision>
    <xacro:box_inertial m="5.0" l="${2*base_length}" w="${2*base_width}" h="${2*base_height}" 
                        xyz="0 0 ${base_height/2}" rpy="0 0 0"/>
  </link> 

  <joint name="base_footprint_joint" type="fixed">
    <parent link="base_footprint"/>
    <child link="base_link"/>
    <origin xyz="0 0 0.1" rpy="0 0 0"/>
  </joint>

  <!-- right wheel -->
  <joint name="right_wheel_joint" type="continuous">
    <parent link="base_link"/>
    <child link="right_wheel"/>
    <origin xyz="${-base_length/4.0} -0.225 0" rpy="0 0 0"/>
    <axis xyz="0 1 0"/>
  </joint>

  <!-- left wheel -->
  <joint name="left_wheel_joint" type="continuous">
    <parent link="base_link"/>
    <child link="left_wheel"/>
    <origin xyz="${-base_length/4.0} 0.225 0" rpy="0 0 0"/>
    <axis xyz="0 1 0"/>
  </joint>

    <!-- caster wheel-->
    <link name="caster_wheel">
      <visual>
        <geometry>
          <sphere radius="0.05"/>
        </geometry>
        <origin xyz="0 0 0" rpy="0 0 0"/>
        <material name="black"/>
      </visual>
      <collision>
        <geometry>
          <sphere radius="0.05"/>
        </geometry>
        <origin xyz="0 0 0" rpy="0 0 0"/>
      </collision>
      <xacro:sphere_inertial m="0.5" r="${2*0.05}" xyz="0 0 0" rpy="0 0 0"/>
    </link>
    
  <joint name="caster_wheel_joint" type="fixed">
    <parent link="base_link"/>
    <child link="caster_wheel"/>
    <origin xyz="0.15 0 -0.05" rpy="0 0 0"/>
  </joint>

</robot>